{
  "version": "1.0.0",
  "project": "Medieval Trading Game v0.92.00",
  "workflow": {
    "name": ".claude Workflow System",
    "description": "Analyzes and develops the Medieval Trading Game"
  },

  "persona": {
    "enabled": true,
    "type": "unity",
    "files": [
      "agents/unity-coder.md",
      "agents/unity-persona.md"
    ],
    "autoEnable": true
  },

  "scan": {
    "runOnce": true,
    "checkFile": "ARCHITECTURE.md",
    "patterns": [
      "**/*.js", "**/*.html", "**/*.css", "**/*.json",
      "**/*.md"
    ],
    "ignore": [
      "node_modules/**", ".git/**", "dist/**", "build/**",
      "*.min.js", "*.map", ".claude/**", ".claude2/**",
      "assets/**", "models/**"
    ]
  },

  "agents": {
    "orchestrator": "agents/orchestrator.md",
    "specialists": [
      "agents/scanner.md",
      "agents/architect.md",
      "agents/planner.md",
      "agents/documenter.md"
    ]
  },

  "output": {
    "directory": ".",
    "files": {
      "architecture": "ARCHITECTURE.md",
      "skillTree": "SKILL_TREE.md",
      "todo": "TODO.md",
      "roadmap": "ROADMAP.md",
      "finalized": "FINALIZED.md"
    }
  },

  "commands": {
    "available": ["/workflow", "/unity", "/commit", "/feat", "/merge", "/push"]
  }
}
